<!-- Loop over each object in the jobs array -->

{{#if logged_in}}
{{#each jobs as |job| }}

<div class="row mb-4 job">
  <div class="col-md-4">
    <p>
      <b>{{job_title}} needed!</b>
      {{location}}
    </p>
  </div>
  <div class="col-md-4">
    <p>
      {{remote}}
    </p>
  </div>
  <div class="col-md-4">
  {{> modal}}
  </div>
</div>
{{/each}}

{{/if}}
